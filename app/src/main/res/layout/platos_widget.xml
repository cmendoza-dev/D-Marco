<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.RestauranteTrujillo.AppWidget.Container"
    android:layout_width="390dp"
    android:layout_height="180dp"
    android:background="@drawable/borde"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@style/Theme.RestauranteTrujillo.AppWidgetContainer">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bordenegro"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/cafe"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bordenegro"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Jugo Mixto Especial." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 18.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bordenegro"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Pizza Americana" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 45.00" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>