<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/menu_cafe"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/imagen4"
                    android:scaleType="centerCrop"
                    android:onClick="showPopup"

                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cafe"
                android:textColor="@color/color_cafe"
                android:textStyle="bold"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bebidas"
                android:textColor="@color/color_bebida"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textColor="@color/color_precio"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_cafe"
                android:textColor="@color/color_parrafo"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:maxLines="3"

                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:backgroundTint="@color/white"

        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/imagen2"
                    android:scaleType="centerCrop"

                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugo"
                android:textColor="@color/color_cafe"
                android:textStyle="bold"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bebidas"
                android:textColor="@color/color_bebida"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textColor="@color/color_precio"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_jugo"
                android:textColor="@color/color_parrafo"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:maxLines="3"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>